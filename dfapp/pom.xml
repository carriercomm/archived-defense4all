	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jetty.version>8.0.4.v20111024</jetty.version>
		<nexusdeploy>http://nexus.opendaylight.org/content</nexusdeploy>
		<sitedeploy>http://nexus.opendaylight.org/content/sites/site</sitedeploy>
		<releaseplugin.version>2.3.2</releaseplugin.version>
	</properties>

	<scm>
		<connection>scm:git:ssh://git.opendaylight.org:29418/defense4all.git</connection>
		<developerConnection>scm:git:ssh://git.opendaylight.org:29418/defense4all.git</developerConnection>
		<url>https://wiki.opendaylight.org/view/Project_Proposals:Defense4All</url>
		<tag>HEAD</tag>
	</scm>


	<modules>
		<module>../framework.core</module>
		<module>../framework.core.impl</module>
		<module>../framework.restservice</module>
		<module>../framework.cli</module>
		<module>../defense4all.core</module>
